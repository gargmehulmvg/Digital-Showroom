<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appSettingLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:paddingStart="@dimen/_12sdp"
    android:paddingEnd="@dimen/_1sdp"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/appSettingImageView"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_refer_earn"
        app:layout_constraintBottom_toBottomOf="@id/appSettingTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/appSettingTextView"
        android:contentDescription="@string/image_view_content_description" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/appSettingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="@font/roboto"
        android:padding="@dimen/_12sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/appSettingImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.75"
        android:background="@color/curve_grey_border"
        android:layout_marginStart="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/appSettingImageView"
        app:layout_constraintTop_toBottomOf="@id/appSettingTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>