<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offerDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:padding="@dimen/_3sdp"
    android:paddingEnd="@dimen/_1sdp"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/bulletImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bullet"
        android:paddingTop="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        app:layout_constraintEnd_toStartOf="@id/activeOffersTextView"
        android:contentDescription="@string/image_view_content_description"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/activeOffersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Offer only applicable on INDUSIND Bank"
        android:paddingLeft="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/bulletImageView"/>



</androidx.constraintlayout.widget.ConstraintLayout>