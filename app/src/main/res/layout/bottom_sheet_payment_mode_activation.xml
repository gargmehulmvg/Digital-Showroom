<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/upper_curve_white_background"
    android:padding="@dimen/_12sdp">

    <ImageView
        android:id="@+id/bottomSheetClose"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:contentDescription="@string/image_view_content_description"
        android:elevation="@dimen/_4sdp"
        android:src="@drawable/ic_black_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomSheetHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetClose"
        tools:text="Activate And start accepting payment on" />

    <TextView
        android:id="@+id/bottomSheetHeading2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetHeading"
        tools:text="Activate And start accepting payment on Credit And Debit Cards" />

    <TextView
        android:id="@+id/bottomSheetSubHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetHeading2"
        tools:text="Please Note" />

    <TextView
        android:id="@+id/conditionOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/_9sdp"
        app:drawableStartCompat="@drawable/ic_exclamation_circle_black_small"
        app:drawableTint="@color/default_text_light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetSubHeading"
        tools:text="Transaction charges will be applied." />

    <TextView
        android:id="@+id/conditiontwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/_9sdp"
        app:drawableStartCompat="@drawable/ic_exclamation_circle_black_small"
        app:drawableTint="@color/default_text_light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conditionOne"
        tools:text="You will receive the amount in your bank on next day of Customer Transaction." />

    <TextView
        android:id="@+id/completeKycTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/ripple_curve_grey_black_background"
        android:elevation="@dimen/_5sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conditiontwo"
        tools:layout_editor_absoluteX="13dp"
        tools:text="Complete KYC Now" />

</androidx.constraintlayout.widget.ConstraintLayout>