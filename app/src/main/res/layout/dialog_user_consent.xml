<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_white_background"
    android:minWidth="@dimen/_220sdp"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        tools:text="I hereby provide my consent to receive emails, SMS, phone calls, whatsapp messages and other communications from Dotpe in order to understand about Dotpeâ€™s services, offerings, promotions and other related information." />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/updateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:background="@drawable/ripple_curve_grey_black_background"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:onClick="onClick"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        tools:text="@string/ok" />

</LinearLayout>