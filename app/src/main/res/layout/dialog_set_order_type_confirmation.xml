<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_white_background"
    android:minWidth="@dimen/_280sdp"
    android:orientation="vertical"
    android:padding="@dimen/_13sdp">

    <ImageView
        android:id="@+id/bottomSheetClose"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="end"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/image_view_content_description"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_black_close" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/headingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.2"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:textColor="@color/dark_blackish"
        android:textSize="@dimen/_20sdp"
        tools:text="Activate # start accepting Prepaid Orders" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subHeadingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/dark_blackish"
        android:textSize="@dimen/_12sdp"
        tools:text="Note for Prepaid Orders" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/dark_blackish"
        android:textSize="@dimen/_12sdp"
        tools:text="You need to handle all cancellations or modifications directly with your customers." />

    <CheckBox
        android:id="@+id/iAcceptCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:checked="true"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        tools:text="I accept" />

    <TextView
        android:id="@+id/activateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:background="@drawable/curve_black_background_selector"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        tools:text="Activate" />

</LinearLayout>