<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/coinImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_coin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_view_content_description" />

    <TextView
        android:id="@+id/referAndEarnTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="string/app_name string/app_name string/app_name string/app_name string/app_name string/app_name"
        android:padding="@dimen/_5sdp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/dark_blackish"
        app:layout_constraintBottom_toBottomOf="@+id/coinImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coinImageView"
        app:layout_constraintTop_toTopOf="@+id/coinImageView" />

    <TextView
        android:id="@+id/referAndEarnAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="â‚¹100"
        android:textStyle="bold"
        android:textColor="@color/dark_blackish"
        android:textSize="@dimen/_17sdp"
        app:layout_constraintBottom_toBottomOf="@+id/coinImageView"
        app:layout_constraintEnd_toEndOf="@+id/coinImageView"
        app:layout_constraintStart_toStartOf="@+id/coinImageView"
        app:layout_constraintTop_toTopOf="@+id/coinImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>