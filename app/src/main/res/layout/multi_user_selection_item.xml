<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/radioButtonContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slight_curve_black_border_grey_background"
    android:padding="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp">

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:buttonTint="@color/black"
        android:clickable="false"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@+id/radioButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioButton"
        app:layout_constraintTop_toTopOf="@+id/radioButton"
        tools:text="Reject admin invitation and continue" />

    <TextView
        android:id="@+id/subHeadingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioButton"
        app:layout_constraintTop_toBottomOf="@+id/headingTextView"
        tools:text="Note: Your current store will be deactivated and you will be logged into the store of which you are an admin" />

</androidx.constraintlayout.widget.ConstraintLayout>