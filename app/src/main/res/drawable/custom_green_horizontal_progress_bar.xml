<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <size
                android:width="@dimen/_12sdp"
                android:height="@dimen/_12sdp" />
            <corners android:radius="@dimen/_6sdp" />
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="@dimen/_2sdp"
                    android:left="@dimen/_2sdp"
                    android:right="@dimen/_2sdp"
                    android:top="@dimen/_2sdp">
                    <shape>
                        <solid android:color="@color/open_green" />
                        <corners android:radius="@dimen/_4sdp" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>